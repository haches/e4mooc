<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.button {
			/* font-weight: bold; */
			/* width: 5em; */
		}
		
		.argTextBox {
			margin-bottom: 0px !important; /* with important we override the default bootstrap css */
			width: 18em;
		}
		
		.cmdLine {
			margin-top: 1em;
			margin-bottom: 1em;
		}
		
		.argDescription {
				margin-left: 1.5em !important;
				color: gray;
		 }
	</ui:style>
	
	<g:HTMLPanel addStyleNames="{style.cmdLine}">
		<b:Button ui:field="compileButton" addStyleNames="{style.button}" icon="COG"> Compile</b:Button>
		<b:Button ui:field="runButton" addStyleNames="{style.button}" icon="PLAY">Run...</b:Button>
		<!-- <b:TextBox placeholder="Arguments" ui:field="argumentBox" addStyleNames="{style.argTextBox}"/> -->
		<!-- <span ui:field="argDescription" class="{style.argDescription}">Hint: Here comes text with commandline argument description.</span> -->
	</g:HTMLPanel>
</ui:UiBinder> 